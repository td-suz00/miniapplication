<div class="new_comment_create">
  <% if @comment.errors.any? %>
    <p>タイトル、テキストを入力してください</p>
  <% end %>

  <%= form_for(@comment) do |f| %>
    <div class="row">
      <div class="input-field col s6">
        <%= f.text_field :title, placeholder: "Title(required)" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_area :text, placeholder: "Text(required)" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.submit "Send" %>
      </div>
    </div>
  <% end %>
</div>

  
