<% @comments.each do |comment| %>
 
    <div class="col s12 m6">
    
      <div class="card blue-grey darken-1">
        
        <%= render partial: "comment", locals: { comment: comment } %>
        
        <div class="card-action">
          <%= link_to '削除', "/comments/#{comment.id}",class: :delete, method: :delete, data: { confirm: '本当に削除しますか？' } %>
          <%= link_to '編集', "/comments/#{comment.id}/edit",class: :edit, method: :get %>
        </div>
       

      </div>
    </div>
  </div>
<% end %>

<%= paginate(@comments) %>

</div>
